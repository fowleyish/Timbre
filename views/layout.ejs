<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
    <link href="../masterstyles.css" type="text/css" rel="stylesheet" crossorigin="anonymous" />
    <title>Timbre</title>
  </head>
  <body>
    <% if (typeof req != 'undefined') { 
        if (typeof req.user != 'undefined') {
          const user = req.user; 
        } 
       }
    %>
    <div class="nav">
      <div id="leftNavItems">
        <% if (typeof user == 'undefined') { %>
          <a href="/users/login" class="navLink">Login</a>
        <% } %>
        <% if (typeof user == 'undefined') { %>
          <a href="/users/register" class="navLink">Register</a>
        <% } %>
        <% if (typeof user != 'undefined') { %>
          <a href="/dashboard" class="navLink">Dashboard</a>
        <% } %>
        <% if (typeof user != 'undefined') { %>
          <a href="/profile/<%=user.UserId%>" class="navLink">My profile</a>
        <% } %>
        <% if (typeof user != 'undefined') { %>
          <a href="/users/logout" class="navLink">Logout</a>
        <% } %>
      </div>
      <div id="centerNavItems">
        <img src="../images/timbreHeaderLogo.PNG" alt="Timbre logo in header" id="timbreHeaderLogo" />
      </div>
      <div id="endNavItems">
        <% if (typeof user != 'undefined') { %>
          <h3 id="usernameInNav"><%= user.Username %></h3>
          <img src="<%=user.Avatar%>" alt="User profile image thumbnail" id="nAvatar">
        <% } %>
      </div>
    </div>
    <div class="container"><%- body %></div>

   
  </body>
</html>