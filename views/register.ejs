<div id="loginRegContainer">
  <div class="loginRegHeader">
    <h1 class="loginRegTitle">Register &nbsp</h1>
    <span><img src="../images/timbreIcon.PNG" alt="Timbre icon" id="timbreIconLoginReg" /></span>
  </div>
  <%- include('./partials/messages') %>
    <form action="/users/register" method="POST">
      <div class="inputSection">
        <div class="inputLabel">
          <label for="username">Email</label>
        </div>
        <div class="inputInput">
          <input
          type="email"
          id="email"
          name="email"
          class="timbreInputBox"
          placeholder="Enter your email"
          value="<%= typeof email != 'undefined' ? email : '' %>"
        >
        </div>
      </div>
      <div class="inputSection">
        <div class="inputLabel">
          <label for="username">Username</label>
        </div>
        <div class="inputInput">
          <input
          type="text"
          id="username"
          name="username"
          class="timbreInputBox"
          placeholder="Select a username"
          value="<%= typeof username != 'undefined' ? username : '' %>"
        >
        </div>
      </div>
      <div class="inputSection">
        <div class="inputLabel">
          <label for="password">Password</label>
        </div>
        <div class="inputInput">
          <input
          type="password"
          id="password"
          name="password"
          class="timbreInputBox"
          placeholder="Create a password"
          value="<%= typeof password != 'undefined' ? password : '' %>"
        >
        </div>
      </div>
      <button type="submit" class="timbreButton timbreButtonOverride loginRegButton">Register</button>
    </form>
    <p>
      Already registered? <a href="/users/login" class="timbreSimpleLink">Login</a>
    </p>
</div>